<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/grid_sanpham"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hinh_laotop"
            android:background="#EEEE"
            android:padding="5dp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/ten_sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Acer Nitro 5"
            android:textColor="@color/app_title_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/hinh_laotop"
            app:layout_constraintTop_toBottomOf="@+id/hinh_laotop" />

        <TextView
            android:id="@+id/gia_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:maxLines="1"
            android:text="30.000.000 \u20AB"
            android:textColor="@color/app_color_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ten_sp"
            app:layout_constraintTop_toBottomOf="@+id/ten_sp" />

        <TextView
            android:id="@+id/gia_goc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.000.000 VNĐ"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gia_ban"/>

        <TextView
            android:id="@+id/khuyenMai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="-10%"
            android:textColor="@color/app_text_erro"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/gia_goc"
            app:layout_constraintStart_toEndOf="@+id/gia_goc"
            app:layout_constraintTop_toBottomOf="@+id/gia_ban" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>