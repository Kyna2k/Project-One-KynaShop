<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/list_car"
    app:cardElevation="0dp"
    android:tag="chonlaysach"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/hinh_laptop"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="#EEEE"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="Lenovo think book"
            android:id="@+id/ten_sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:padding="2dp"
            android:layout_marginStart="12dp"
            android:maxLength="20"
            android:textColor="@color/app_title_text"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/hinh_laptop"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:text="5000"
            android:id="@+id/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/app_color_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ten_sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/btn_tru"
            android:src="@mipmap/ic_minus"
            android:layout_width="24dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/soluong"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:gravity="center"
            android:textSize="12sp"
            app:strokeWidth="0dp"
            android:maxLength="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_cong"
            android:src="@mipmap/ic_plus"
            android:layout_width="24dp"
            android:layout_height="match_parent"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_xoa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_trash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ten_sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>